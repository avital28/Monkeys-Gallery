<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Monkeys_Gallery.models"
             xmlns:Local="clr-namespace:Monkeys_Gallery"
             x:DataType="Local:MainPage"
             x:Class="Monkeys_Gallery.MainPage">

    <ScrollView>
        <HorizontalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <Grid BindingContext="{Binding Monkey}"
                  RowDefinitions="*,*,*">
                <Button 
            x:Name="left"
            BorderColor="LavenderBlush"
            BorderWidth="3"
            Clicked="LeftBtnClicked"
            CornerRadius="40"
            HeightRequest="80"
            WidthRequest="80"
                Text="left">
                
            </Button>
                <Label x:DataType="models:Monkey" Text="{Binding Name}" ></Label>
                <Button
                    Grid.Row="2"
                    x:Name="right"
            BorderColor="LavenderBlush"
            BorderWidth="3"
            Clicked="RightBtnClicked"
            CornerRadius="40"
            HeightRequest="80"
            WidthRequest="80"
                Text="right">

            </Button>
            </Grid>
        </HorizontalStackLayout>
    </ScrollView>

</ContentPage>
